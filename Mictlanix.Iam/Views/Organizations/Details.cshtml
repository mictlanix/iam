    <div class="display-field">
        @Html.DisplayFor(model => model.Phone)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.PhoneExt)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PhoneExt)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Email)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
        @Html.ValidationMessageFor(Model => Model.Email)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Website)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Website)
        @Html.ValidationMessageFor(Model => Model.Website)
    </div>
</fieldset>
<p>
    @if (Html.GetUser(User.Identity.Name).AllowEditSchools)
    {
        @Html.ActionLink(Mictlanix.Iam.Properties.Resources.Edit, "Edit", new { id = Model.Id }) @:|
    }
    @Html.ActionLink(Mictlanix.Iam.Properties.Resources.BackToList, "Index")
</p>
