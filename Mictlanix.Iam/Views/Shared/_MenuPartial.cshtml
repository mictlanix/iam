@using Mictlanix.Iam.Models;
@using Mictlanix.Iam.Helpers;

@{
    var user = Html.GetUser(User.Identity.Name) ?? new User();
}

@if (user.AllowReadSchools)
{
    <li>@Html.ActionLink("Dependecias", "Index", "Schools")</li>
}

@if (user.AllowReadOrganizations)
{
    <li>@Html.ActionLink("Contrapartes", "Index", "Organizations")</li>
}

@if (user.AllowReadRequests)
{
    <li>@Html.ActionLink("Revisiones", "Index", "ArrangementRequests")</li>
}

@if (user.AllowReadArrangements)
{
    <li>@Html.ActionLink("Convenios", "Index", "Arrangements")</li>
}

@if (user.IsAdministrator)
{
    <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
}