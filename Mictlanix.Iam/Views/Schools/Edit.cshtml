@using Mictlanix.Iam.Helpers;
@using Mictlanix.Iam.Models;
@model Mictlanix.Iam.Models.School

@{
    ViewBag.Title = Mictlanix.Iam.Properties.Resources.Edit;
}

<h2>@Mictlanix.Iam.Properties.Resources.Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Mictlanix.Iam.Properties.Resources.School</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.ShortName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShortName)
            @Html.ValidationMessageFor(model => model.ShortName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            <select id="school-type-list" name="Type">
                @foreach (var item in Enum.GetValues(typeof(TypeEnum)))
                {
                    if ((TypeEnum)item == Model.TypeEnum)
                    {
                        <option value="@((int)item)" selected="selected">@Model.TypeEnum.GetDisplayName()</option>
                    }
                    else
                    {
                        <option value="@((int)item)">@(((TypeEnum)item).GetDisplayName())</option>
                    }
                }
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExteriorNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExteriorNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InteriorNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InteriorNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Neighborhood)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Neighborhood)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Borough)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Borough)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Country)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Country)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ZipCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ZipCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneExt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneExt)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Website)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Website)
        </div>

        <p>
            <input type="submit" value="@Mictlanix.Iam.Properties.Resources.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Mictlanix.Iam.Properties.Resources.BackToList, "Index")
</div>
