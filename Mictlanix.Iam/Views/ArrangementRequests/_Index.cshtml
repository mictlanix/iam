@using Mictlanix.Iam.Models;
@using Mictlanix.Iam.Helpers;
@model Search<ArrangementRequest>

<p>
@Html.ValidationMessageFor(x => x.Pattern)
</p>

<table>
    <tr>
        <th>
            @Html.LabelFor(x => new ArrangementRequest().Id)
        </th>
        <th>
            @Html.LabelFor(x => new ArrangementRequest().SchoolId)
        </th>
        <th>
            @Html.LabelFor(x => new ArrangementRequest().OrganizationId)
        </th>
        <th>
            @Html.LabelFor(x => new ArrangementRequest().Object)
        </th>
        
        <th></th>
    </tr>
@foreach (var item in Model.Results)
{
    <tr>
        <td>
            @Html.DisplayFor(x => item.Id)
        </td>
        <td>
            @Html.DisplayFor(x => item.School.Name)
        </td>
        <td>
            @Html.DisplayFor(x => item.Organization.Name)
        </td>
        <td>
            @Html.DisplayFor(x => item.Object)
        </td>
        <td>
            @if (Html.GetUser(User.Identity.Name).AllowEditRequests)
            {
                @Html.ActionLink(Mictlanix.Iam.Properties.Resources.Edit, "Edit", new { id = item.Id }) @:|
            }
            
            @Html.ActionLink(Mictlanix.Iam.Properties.Resources.Details, "Details", new { id = item.Id })
            
            @if (Html.GetUser(User.Identity.Name).AllowDeleteRequests)
            {
                @:| @Html.ActionLink(Mictlanix.Iam.Properties.Resources.Delete, "Delete", new { id = item.Id })
            }
            @if (Html.GetUser(User.Identity.Name).AllowCreateArrangements && item.IsCorrect)
            {
                @:| @Html.ActionLink(Mictlanix.Iam.Properties.Resources.CreateArragement, "CreateFromRequest", "Arrangements", new { id = item.Id }, null)

            }
            
        </td>
    </tr>
}

</table>
