@using Mictlanix.Iam.Helpers;
@model Mictlanix.Iam.Models.ArrangementRequest

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Revision de Arreglo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Dependencia)
        </div>
        <div class="editor-field">
            <select id="dependency-list" name="Dependencia">
            @foreach (var item in Html.GetSchools()) {
            <option>@Html.DisplayFor(x => item.Nombre)</option>
            }
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Contraparte)
        </div>
        <div class="editor-field">
            <select id="dependency-list" name="Contraparte">
            @foreach (var item in Html.GetOrganizations())
            {
            <option>@Html.DisplayFor(x => item.Nombre)</option>
            }
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Objeto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Objeto)
            @Html.ValidationMessageFor(model => model.Objeto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FiguraJuridica)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FiguraJuridica)
            @Html.ValidationMessageFor(model => model.FiguraJuridica)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OficioSolicitud)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OficioSolicitud)
            @Html.ValidationMessageFor(model => model.OficioSolicitud)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MedioElectronico)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MedioElectronico)
            @Html.ValidationMessageFor(model => model.MedioElectronico)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Anexos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Anexos)
            @Html.ValidationMessageFor(model => model.Anexos)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Formato)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Formato)
            @Html.ValidationMessageFor(model => model.Formato)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DocumentacionContraparte)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DocumentacionContraparte)
            @Html.ValidationMessageFor(model => model.DocumentacionContraparte)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Escrito)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Escrito)
            @Html.ValidationMessageFor(model => model.Escrito)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AutorizacionAcademica)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AutorizacionAcademica)
            @Html.ValidationMessageFor(model => model.AutorizacionAcademica)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Reviso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Reviso)
            @Html.ValidationMessageFor(model => model.Reviso)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>
